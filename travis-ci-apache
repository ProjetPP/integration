<VirtualHost *:80>
  DocumentRoot /home/travis/Deployment/PPP-Wikidata/www/
  ServerName wikidata.ppp.pony.ovh

  <Directory "/home/travis/Deployment/PPP-Wikidata/www/">
    Options FollowSymLinks MultiViews ExecCGI
    AllowOverride All
    Order deny,allow
    Allow from all
  </Directory>

  # Wire up Apache to use Travis CI's php-fpm.
  <IfModule mod_fastcgi.c>
    AddHandler php5-fcgi .php
    Action php5-fcgi /php5-fcgi
    Alias /php5-fcgi /usr/lib/cgi-bin/php5-fcgi
    FastCgiExternalServer /usr/lib/cgi-bin/php5-fcgi -host 127.0.0.1:8000 -pass-header Authorization
  </IfModule>

</VirtualHost>

<VirtualHost *:80>
  ServerName gunicorn.ppp.pony.ovh
  ProxyPass / http://127.0.0.1:9000/
  ProxyPassReverse / http://127.0.0.1:9000/
  <Proxy *>
    Order deny,allow
    Allow from all
  </Proxy>
  AssignUserId ppp ppp
</VirtualHost>
